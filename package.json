{
  "name": "tsukimi",
  "version": "0.11.0-alpha",
  "description": "tsukimi media browser",
  "author": "Jacob Hipps <jacob@ycnrg.org>",
  "copyright": "Copyright Â© 2014-2017 J. Hipps/Neo-Retro Group, Inc.",
  "homepage": "https://tsukimi.io/",
  "license": "MPLv2",
  "keywords": [
    "video",
    "browser",
    "player",
    "client",
    "scraper",
    "tv",
    "movies",
    "film",
    "anime",
    "electron"
  ],
  "main": "app/index.js",
  "build": {
    "appId": "com.neoretro.tsukimi",
    "copyright": "${copyright}",
    "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "appId": "${build.appId}"
    },
    "linux": {
      "vendor": "Neo-Retro Group, Inc.",
      "executableName": "tsukimi",
      "category": "AudioVideo",
      "extraFiles": [
        "README.md",
        "LICENSE.txt"
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "highestAvailable"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "menuCategory": "tsukimi",
      "license": "LICENSE.txt",
      "installerIcon": "build/icon256.ico",
      "uninstallerIcon": "build/icon256.ico",
      "artifactName": "${name}-${version}-${os}-${arch}.${ext}"
    },
    "squirrelWindows": {
      "iconUrl": "http://tsukimi.io/favicon.ico"
    },
    "deb": {
      "priority": "optional",
      "depends": [
        "mpv>=0.27.0"
      ]
    },
    "rpm": {
      "maintainer": "${author}",
      "depends": [
        "mpv>=0.27.0"
      ]
    },
    "pacman": {
      "maintainer": "${author}",
      "depends": [
        "mpv>=0.27.0"
      ]
    },
    "publish": {
      "provider": "generic",
      "url": "https://release.ycnrg.org/update/${os}_${arch}"
    }
  },
  "scripts": {
    "postinstall": "gulp",
    "start": "electron ./app",
    "dev": "gulp run",
    "dist": "gulp buildall"
  },
  "repository": {
    "type": "git",
    "url": "https://git.ycnrg.org/projects/TSK/repos/tsukimi"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "chalk": "^1.1.3",
    "del": "^2.2.2",
    "fs-jetpack": "^1.0.0",
    "fs-xattr": "^0.1.14",
    "ip": "^1.1.5",
    "iso-639-1": "^1.3.0",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "mongodb": "^2.1.18",
    "multicast-dns": "^6.1.1",
    "request": "^2.72.0",
    "winston": "^2.2.0",
    "winston-mongodb": "^1.5.0",
    "xml2js": "^0.4.16"
  },
  "devDependencies": {
    "electron": "~1.7.6",
    "electron-builder": "^19.32.0",
    "electron-builder-squirrel-windows": "^19.32.0",
    "electron-inspector": "^0.1.4",
    "gulp": "^3.9.1",
    "gulp-bower": "0.0.13",
    "gulp-compass": "^2.1.0",
    "gulp-jshint": "^2.0.1",
    "gulp-jshint-bamboo": "0.0.2",
    "gulp-util": "^3.0.7",
    "imagemagick": "^0.1.3",
    "jshint-stylish": "^2.2.0",
    "jshint-stylish-summary": "^0.1.2",
    "rollup": "^0.45.2",
    "yargs": "^9.0.1"
  },
  "native_mods": [
    "fs-xattr"
  ]
}
